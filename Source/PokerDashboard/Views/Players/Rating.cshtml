@model IEnumerable<PokerDashboard.Models.PlayerRating>

@{
    ViewBag.Title = "Rating";
}

<h2>Rating</h2>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rank)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GamesPlayed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GamesFirstPlace)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GamesSecondPlace)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GamesThirdPlace)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Rank)
        </td>
        <td>
            @Html.ActionLink(@Html.DisplayFor(modelItem => item.Name).ToString(), "Player", new { id=item.Id  })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Balance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GamesPlayed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GamesFirstPlace)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GamesSecondPlace)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GamesThirdPlace)
        </td>
    </tr>
}

</table>
